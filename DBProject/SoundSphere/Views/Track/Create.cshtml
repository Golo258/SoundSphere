
@using SoundSphere.ViewModels
@model CreateTrackVM

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId"/>
    <div class="form-group">
        <label asp-for="Title">Title </label>
        <input asp-for="Title" class="form-control" placeholder="Enter your track title:">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Artist">Concert Artist</label>
        <input asp-for="Artist" class="form-control" placeholder="Enter your track description:">
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre">Concert Genre</label>
        <input asp-for="Genre" class="form-control" placeholder="Enter your track description:">
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="ReleaseYear">Concert ReleaseYear</label>
        <input asp-for="ReleaseYear" class="form-control" placeholder="Enter your track description:">
        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating.Comment">Concert Comment</label>
        <input asp-for="Rating.Comment" class="form-control" placeholder="Enter your track street address:">
        <span asp-validation-for="Rating.Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating.Points">Concert Points</label>
        <input asp-for="Rating.Points" class="form-control" placeholder="Enter your track city address:">
        <span asp-validation-for="Rating.Points" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>