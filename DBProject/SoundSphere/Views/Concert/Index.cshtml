@using SoundSphere.Models
@model IEnumerable<MusicConcert>

<section class="py-5 text-center container">
<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
    <h1 class="fw-light">Concerts Albums</h1>
    <p class="lead text-body-secondary">
        This is a set of our concert album 
        </p>
    </div>
</div>

</section>
<div class="album py-5 bg-body-tertiary">
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                    <img class="card-img-top" src="@item.Image" alt="Card image cap" width="100%" height="auto">
                    <div class="card-body">
                        <p class="card-text">@item.Name</p>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a type="btn btn-success" class="btn btn-sm btn-outline-secondary" asp-controller="Concert" asp-action="Detail" asp-route-id="@item.Id">View</a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                <a type="btn btn-success" class="btn btn-sm btn-outline-secondary" asp-controller="Concert" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a type="btn btn-success" class="btn btn-sm btn-outline-secondary" asp-controller="Concert" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            }
                        </div>
                        <small class="text-body-secondary">@item.Artist</small>
                        </div>
                    </div>
                    </div>
                </div>
            }
    </div>
</div>
