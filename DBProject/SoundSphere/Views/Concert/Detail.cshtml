<html lang="en">
@using SoundSphere.Models
@model MusicConcert

<body>

    <main class="container">
        <section class="tab-content">


            <div class="tab-pane active" id="project1" role="tabpanel" aria-labelledby="project1-tab">
                <h1 class="my-4">Representation of Concert</h1>
                <div class="row">
                    <div class="col-md-8">
                        <img alt="Image" src="@Model.Image" class="rounded img-fluid" />
                    </div>
                    <div class="col-md-4">
                        <h3 class="my-3">Concert name: @Model.Name</h3>

                        <h5>Description:  @Model.Description  </h5>

                        <ul>
                            <li>Concert artists: : @Model.Artist</li>
                            <li>Concert venue: @Model.Venue</li>
                            <li>Rating comment: @Model.Rating.Comment</li>
                            <li>Rating points: @Model.Rating.Points</li>
                        </ul>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>