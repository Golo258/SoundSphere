
@using SoundSphere.ViewModels
@model CreateConcertVM

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId"/>
    <div class="form-group">
        <label asp-for="Name">Name </label>
        <input asp-for="Name" class="form-control" placeholder="Enter your concert title:">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Artist">Concert Artist</label>
        <input asp-for="Artist" class="form-control" placeholder="Enter your concert description:">
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Venue">Concert Venue</label>
        <input asp-for="Venue" class="form-control" placeholder="Enter your concert description:">
        <span asp-validation-for="Venue" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Description">Concert Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter your concert description:">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating.Comment">Concert Comment</label>
        <input asp-for="Rating.Comment" class="form-control" placeholder="Enter your concert street address:">
        <span asp-validation-for="Rating.Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating.Points">Concert Points</label>
        <input asp-for="Rating.Points" class="form-control" placeholder="Enter your concert city address:">
        <span asp-validation-for="Rating.Points" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>